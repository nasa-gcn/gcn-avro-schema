{
  "$id": "https://raw.githubusercontent.com/Vidushi-GitHub/gcn-avro-schema/validate/icecube/gcn.notices.amon.GoldAndBronze.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "gcn.notices.amon",
  "description": "GoldAndBronze",
  "properties": {
    "type": {
      "description": "Notice type Gold or Bronze",
      "type": "string"
    },
    "event": {
      "$ref": "/Vidushi-GitHub/gcn-avro-schema/validate/core-schema/gcn.notices.core.EventInfo.schema.json"
    },
    "localization": {
      "$ref": "/Vidushi-GitHub/gcn-avro-schema/validate/core-schema/gcn.notices.core.Localization.schema.json"
    },
    "err50": {
      "description": "Location uncertainty (radius, 50% containment) in units of arcmin",
      "type": "number",
      "minimum": 0
    },
    "discovery_datetime": {
      "$ref": "/Vidushi-GitHub/gcn-avro-schema/validate/core-schema/gcn.notices.core.DateTime.schema.json"
    },
    "revision": {
      "description": "Revision number by IceCube",
      "type": "number"
    },
    "energy": {
      "description": "Most probable neutrino energy [TeV] that would have produced an event",
      "type": "number",
      "minimum": 0
    },
    "signalness": {
      "description": "Probability [dn] that this is an astrophysical signal relative to backgrounds",
      "type": "number",
      "minimum": 0
    },
    "far": {
      "description": "Rate of background events expected that are 'like this alert', would be seen by IceCube per year",
      "$ref": "/Vidushi-GitHub/gcn-avro-schema/validate/core-schema/gcn.notices.core.Statistics.schema.json"
    }
  },
  "required": [
    "type",
    "event",
    "localization",
    "err50",
    "discovery_datetime",
    "revision",
    "energy",
    "signalness",
    "far"
  ]
}

{
  "$id": "https://gcn.nasa.gov/schema/main/gcn/notices/glowbug/alert.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Glowbug Alert Notice",
  "description": "Information about a Glowbug trigger.  All fields optional; omitted if not available or not applicable.",
  "type": "object",
  "allOf": [
    {
      "$ref": "/schema/main/gcn/notices/core/Reporter.schema.json",
      "description": "mission=GLOWBUG"
    },
    {
      "$ref": "/schema/main/gcn/notices/core/AdditionalInfo.schema.json",
      "description": "Complementary info in text form."
    },
    {
      "$ref": "/schema/main/gcn/notices/core/Alert.schema.json"
    },
    {
      "$ref": "/schema/main/gcn/notices/core/Event.schema.json",
      "description": "event_id=[ 'BUGyymmdd.fff', seqnum ], where fff is in milidays with trailing zeros. id_source=GLOWBUG for both."
    },
    {
      "$ref": "/schema/main/gcn/notices/core/DateTime.schema.json",
      "description": "Trigger_time with seconds fraction."
    },
    {
      "$ref": "/schema/main/gcn/notices/core/Statistics.schema.json",
      "description": "rate_duration is the integration time (a.k.a. trigger time scale), over which the rate_snr was measured."
    }
  ],
  "properties": {
    "detector_status": {
      "type": "object",
      "properties": {
        "CsI0": {
          "$ref": "/schema/main/gcn/notices/core/DetectorStatus.schema.json"
        },
